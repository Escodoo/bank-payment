<odoo>

    <record model="ir.ui.view" id="account_payment_mode_form_view">
        <field
            name="name"
        >account.payment.mode.form (in account_payment_order_by_partner)</field>
        <field name="model">account.payment.mode</field>
        <field name="inherit_id" ref="account_payment_mode.account_payment_mode_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_order_ok']" position="after">
                <field name="individual_payment" />
            </xpath>
        </field>
    </record>


</odoo>
